---
import BaseLayout from "../layouts/BaseLayout.astro";

// Themed images for active/upcoming projects (Unsplash)
const images = {
  youtube: "https://images.unsplash.com/photo-1611162616475-46b635cb6868?w=800&h=450&fit=crop",
  education: "https://images.unsplash.com/photo-1524178232363-1fb2b075b655?w=800&h=450&fit=crop",
  academy: "https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?w=800&h=450&fit=crop",
  healthcare: "https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?w=800&h=450&fit=crop",
};

const activeProjects = [
  {
    title: "SellOnTube",
    img: images.youtube,
    desc: "YouTube-first customer acquisition for internet businesses in a Done-For-You model.",
    url: "https://sellontube.com",
    badge: "ACTIVE",
  },
  {
    title: "The Second Design",
    img: images.education,
    desc: "An education design studio building transformational learning environments. Cohort-based programs, curriculum design, and facilitator training.",
    url: "https://theseconddesign.com",
    badge: "ACTIVE",
  },
];

const upcomingProjects = [
  {
    title: "Turpentine Academy",
    img: images.academy,
    desc: "Workshops and playbooks for founders on clarity, execution, marketing, and leverage. Built from real projects, not theory.",
    url: "/academy",
    badge: "UPCOMING",
  },
  {
    title: "SimpleScheduleAI",
    img: images.healthcare,
    desc: "A product-in-progress for US healthcare scheduling, focused on reducing operational chaos, overtime, and burnout.",
    url: "https://simplescheduleai.com",
    badge: "R&D",
  },
];

const pastProjects = [
  {
    title: "HowToCBC",
    desc: "Taught founders how to build and run cohort-based courses, centered for the US market.",
    url: "https://web.archive.org/web/20240424175652/https://howtocbc.com/",
    badge: "PAST",
  },
  {
    title: "Pupilfirst",
    desc: "The evolution of Startup Village into a tech company, running cohort-based courses to help students upskill.",
    url: "https://www.pupilfirst.org/",
    badge: "PAST",
  },
  {
    title: "Startup Village Collective (SV.CO)",
    desc: "Early-stage founder education and incubation. Helping students and professionals build real products and skills.",
    url: "https://web.archive.org/web/20180822114305/https://www.sv.co/",
    badge: "PAST",
  },
  {
    title: "SV Labs",
    desc: "Digitized the award-winning Kochi-based incubator, Startup Village. The SV Road course took the entire incubator experience online for early-stage founder education.",
    url: "https://web.archive.org/web/20150219070232/http://www.startupvillage.in/",
    badge: "PAST",
  },
];

const allSections = [
  { title: "Active", projects: activeProjects },
  { title: "Upcoming", projects: upcomingProjects },
  { title: "Past", projects: pastProjects },
];
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <!-- HERO -->
  <section class="relative mt-4 mb-16">
    <div class="space-y-6">
      <div class="inline-flex items-center gap-2 rounded-full border border-base-300/50 bg-base-200/50 px-4 py-1.5 text-xs font-medium tracking-wide">
        <span class="text-primary">PROJECTS</span>
        <span class="text-base-content/30">â€¢</span>
        <span class="text-base-content/60">What I build</span>
      </div>

      <h1 class="text-4xl md:text-5xl font-bold leading-[1.1] tracking-tight max-w-3xl">
        <span class="gradient-text">Internet-first businesses.</span>
      </h1>

      <p class="text-lg md:text-xl text-base-content/70 max-w-2xl leading-relaxed">
        Some are experiments. Some are serious long-term bets. This is a snapshot of what I am actively running, what is coming next, and what I have built in the past.
      </p>
    </div>
  </section>

  <!-- PROJECT SECTIONS -->
  {allSections.map((section) => (
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-8">{section.title}</h2>

      <div class={section.title === "Past" ? "space-y-3" : "grid md:grid-cols-2 gap-6"}>
        {section.projects.map((p) => (
          <a
            href={p.url}
            target={p.url.startsWith("http") ? "_blank" : "_self"}
            rel={p.url.startsWith("http") ? "noopener noreferrer" : undefined}
            class="group block bg-base-200/50 border border-base-300/50 rounded-xl overflow-hidden hover-glow transition-all"
          >
            {p.img && (
              <div class="aspect-video overflow-hidden bg-base-300/30">
                <img
                  src={p.img}
                  alt={p.title}
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  loading="lazy"
                />
              </div>
            )}
            <div class="p-6">
              <div class="flex items-center gap-3 mb-2">
                <h3 class="text-lg font-bold group-hover:text-primary transition-colors">{p.title}</h3>
                <span class={`badge badge-sm font-medium ${p.img ? 'badge-primary' : 'badge-outline'}`}>{p.badge}</span>
              </div>
              <p class="text-base-content/70 text-sm leading-relaxed">{p.desc}</p>
              {p.img && (
                <div class="mt-4 flex items-center gap-2 text-sm text-primary opacity-0 group-hover:opacity-100 transition-opacity">
                  <span>View project</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </div>
              )}
            </div>
          </a>
        ))}
      </div>
    </section>
  ))}
</BaseLayout>
