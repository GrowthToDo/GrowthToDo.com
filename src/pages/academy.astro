---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";

const INTEREST_LINK =
  "mailto:gauthamail@gmail.com?subject=Turpentine%20Academy%20%E2%80%94%20I%27m%20interested&body=Hey%20Gautham%2C%0A%0AI%27m%20interested%20in%20Turpentine%20Academy.%20Here%27s%20what%20I%27m%20building%20and%20what%20I%27d%20love%20to%20learn%3A%0A%0A-%20What%20I%27m%20building%3A%20%0A-%20What%20I%27m%20stuck%20on%3A%20%0A-%20Topics%20I%27m%20most%20interested%20in%3A%20%0A%0AThanks!";

// Turpentine Academy (GrowthToDo) — what you run directly
const turpentineReady = [
  {
    title: "Reverse Engineer Product–Market Fit",
    img: "/post_img.webp",
    desc:
      "A practical workshop for founders to identify the real bottleneck, define the buyer + promise, and leave with a tight execution plan.",
    url: "/consulting",
    badge: "READY",
  },
];

const turpentineComingSoon = [
  {
    title: "Performance Marketing for the Indian Market",
    img: "/post_img.webp",
    desc:
      "A founder-friendly course on running ads with clarity: offers, landing pages, measurement, creatives, and iteration — tailored to India.",
    url: "#",
    badge: "COMING SOON",
  },
];

// The Second Design — already available there (linked out)
const secondDesignAvailable = [
  {
    title: "Design Your Own Code-Based Course",
    img: "/post_img.webp",
    desc:
      "A practical program under The Second Design: design the curriculum, learning cadence, projects, and outcomes for a course people actually finish.",
    url: "https://theseconddesign.com",
    badge: "AVAILABLE",
  },
  {
    title: "Online Course Creation Kickstarter",
    img: "/post_img.webp",
    desc:
      "A fast-start workshop under The Second Design to go from idea → outline → first module → launch plan, without perfectionism.",
    url: "https://theseconddesign.com",
    badge: "AVAILABLE",
  },
];
---

<BaseLayout title="Academy" sideBarActiveItemID="academy">
  <!-- HERO + MANIFESTO -->
  <section class="mt-2">
    <div class="text-3xl w-full font-bold">Turpentine Academy</div>

    <div class="mt-5 grid gap-6">
      <!-- Quote as hero artifact -->
      <div class="rounded-2xl border border-slate-200 dark:border-slate-800 bg-base-100 p-7">
        <div class="text-2xl md:text-3xl leading-snug font-semibold">
          “When art critics get together they talk about Form and Structure and Meaning.
          When artists get together they talk about where you can buy cheap turpentine.”
        </div>
        <div class="mt-3 text-sm opacity-75">— Pablo Picasso</div>

        <!-- Tight explainer (scan-first) -->
        <div class="mt-6 grid gap-3 md:grid-cols-3">
          <div class="rounded-2xl border border-slate-200 dark:border-slate-800 p-4 bg-base-100">
            <div class="font-bold">Less theory theatre</div>
            <div class="mt-1 text-sm opacity-80">
              Fewer frameworks-for-the-sake-of-it. More decisions you can act on.
            </div>
          </div>
          <div class="rounded-2xl border border-slate-200 dark:border-slate-800 p-4 bg-base-100">
            <div class="font-bold">More real craft</div>
            <div class="mt-1 text-sm opacity-80">
              Tools, constraints, distribution, shipping — the unglamorous truth.
            </div>
          </div>
          <div class="rounded-2xl border border-slate-200 dark:border-slate-800 p-4 bg-base-100">
            <div class="font-bold">Workshops you use</div>
            <div class="mt-1 text-sm opacity-80">
              You leave with artifacts: plans, scorecards, experiments — not vibes.
            </div>
          </div>
        </div>
      </div>

      <!-- CTA strip (separate decision moment) -->
      <div class="rounded-2xl border border-slate-200 dark:border-slate-800 p-6 bg-base-100">
        <div class="flex flex-wrap items-center justify-between gap-4">
          <div class="flex flex-wrap gap-3">
            <a class="btn" href={INTEREST_LINK}>Get notified</a>
            <a class="btn btn-outline" href="/blog">Read the blog</a>
          </div>
          <div class="text-sm opacity-75 max-w-2xl">
            <span class="font-semibold">Not for:</span> people looking for generic “content”.
            <span class="ml-1 font-semibold">For:</span> builders who want clarity + execution.
          </div>
        </div>
      </div>

      <div class="text-sm text-slate-500">
        If you want a private run for your team/community, email context and I’ll tell you what fits.
      </div>
    </div>
  </section>

  <!-- PROGRAMS & WORKSHOPS (no redundant Turpentine header) -->
  <section class="mt-12">
    <div class="text-2xl font-bold mb-2">Programs & workshops</div>
    <div class="text-sm opacity-75">
      What’s available now, and what’s next under Turpentine Academy.
    </div>

    <!-- READY -->
    <div class="mt-6">
      <div class="flex items-center justify-between gap-3 mb-4">
        <div class="text-xl font-bold">Ready</div>
        <div class="badge">Run now</div>
      </div>

      <div class="rounded-2xl border border-slate-200 dark:border-slate-800 bg-base-100 p-4 md:p-5">
        {turpentineReady.map((c, idx) => (
          <>
            <HorizontalCard
              title={c.title}
              img={c.img}
              desc={c.desc}
              url={c.url}
              badge={c.badge}
              target={c.url.startsWith("http") ? "_blank" : "_self"}
            />
            {idx !== turpentineReady.length - 1 && <div class="divider my-0"></div>}
          </>
        ))}
      </div>
    </div>

    <!-- COMING SOON (muted) -->
    <div class="mt-10">
      <div class="flex items-center justify-between gap-3 mb-4">
        <div class="text-xl font-bold">Coming soon</div>
        <div class="badge badge-outline">In build</div>
      </div>

      <div class="rounded-2xl border border-slate-200 dark:border-slate-800 bg-base-100/50 p-4 md:p-5 opacity-90">
        {turpentineComingSoon.map((c, idx) => (
          <>
            <HorizontalCard
              title={c.title}
              img={c.img}
              desc={c.desc}
              url={c.url}
              badge={c.badge}
              target={c.url.startsWith("http") ? "_blank" : "_self"}
            />
            {idx !== turpentineComingSoon.length - 1 && <div class="divider my-0"></div>}
          </>
        ))}
        <div class="mt-4 text-sm opacity-75">
          Want early access? Hit <span class="font-semibold">Get notified</span> and tell me what you’re building.
        </div>
      </div>
    </div>
  </section>

  <!-- CLEAR BRAND BOUNDARY -->
  <section class="mt-12">
    <div class="rounded-2xl border border-slate-200 dark:border-slate-800 p-6 bg-base-100">
      <div class="text-sm uppercase tracking-wide opacity-70">Also available elsewhere</div>
      <div class="mt-2 text-2xl font-bold">From The Second Design</div>
      <div class="mt-2 text-sm opacity-75">
        These programs are already live under The Second Design. You’ll be leaving GrowthToDo.
      </div>
    </div>

    <!-- lighter, simpler list style (not the same visual weight as your own offerings) -->
    <div class="mt-6 grid gap-3">
      {secondDesignAvailable.map((c) => (
        <a
          href={c.url}
          target="_blank"
          rel="noopener noreferrer"
          class="rounded-2xl border border-slate-200 dark:border-slate-800 p-5 bg-base-100 hover:bg-base-200 transition"
        >
          <div class="flex flex-wrap items-start justify-between gap-3">
            <div>
              <div class="text-lg font-bold">{c.title}</div>
              <div class="mt-1 text-sm opacity-80 max-w-3xl">{c.desc}</div>
            </div>
            <div class="flex items-center gap-2">
              <div class="badge badge-outline">{c.badge}</div>
              <span class="text-sm opacity-70">↗</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- FINAL CTA (stronger, less polite) -->
  <section class="mt-12">
    <div class="rounded-2xl border border-slate-200 dark:border-slate-800 p-7 bg-base-100">
      <div class="text-2xl font-bold">Want a private Turpentine Academy run for your team?</div>
      <p class="mt-2 text-lg">
        Don’t overthink it. Email context and I’ll tell you what fits, what doesn’t, and the fastest starting point.
      </p>
      <div class="mt-5 flex flex-wrap gap-3">
        <a class="btn" href={INTEREST_LINK}>Email me</a>
        <a class="btn btn-outline" href="/consulting">See how I run sessions</a>
      </div>
      <p class="mt-3 text-sm opacity-70">
        Send 5 lines: what you’re building, who it’s for, traction, what’s stuck, and what you’ve tried.
      </p>
    </div>
  </section>
</BaseLayout>