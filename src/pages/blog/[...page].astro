---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import createSlug from "../../lib/createSlug"

export async function getStaticPaths({ paginate }) {
  const posts = await getCollection("blog");
  posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
  return paginate(posts, { pageSize: 10 });
}

const { page } = Astro.props;
---

<BaseLayout title="Blog" sideBarActiveItemID="blog">
  <!-- HERO -->
  <section class="relative mt-4 mb-12">
    <div class="space-y-6">
      <div class="inline-flex items-center gap-2 rounded-full border border-base-300/50 bg-base-200/50 px-4 py-1.5 text-xs font-medium tracking-wide">
        <span class="text-primary">BLOG</span>
        <span class="text-base-content/30">â€¢</span>
        <span class="text-base-content/60">Ideas & insights</span>
      </div>

      <h1 class="text-4xl md:text-5xl font-bold leading-[1.1] tracking-tight">
        <span class="gradient-text">Writing.</span>
      </h1>

      <p class="text-lg text-base-content/70 max-w-2xl">
        Thoughts on product, strategy, distribution, and building internet-first businesses.
      </p>
    </div>
  </section>

  <!-- POSTS -->
  {page.data.length === 0 ? (
    <div class="bg-base-200/50 border border-base-300/50 rounded-xl p-6">
      <p class="font-bold">No posts yet</p>
      <p class="text-base-content/60">Check back later for new content.</p>
    </div>
  ) : (
    <div class="space-y-4">
      {page.data.map((post) => (
        <a
          href={"/blog/" + createSlug(post.data.title, post.slug)}
          class="group block bg-base-200/50 border border-base-300/50 rounded-xl overflow-hidden hover-glow transition-all"
        >
          <div class="flex flex-col md:flex-row">
            {post.data.heroImage && (
              <div class="md:w-48 md:h-32 flex-shrink-0 overflow-hidden bg-base-300/30">
                <img
                  src={post.data.heroImage}
                  alt={post.data.title}
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  loading="lazy"
                />
              </div>
            )}
            <div class="p-5 flex-grow">
              <div class="flex flex-wrap items-center gap-2 mb-2">
                <h2 class="text-lg font-bold group-hover:text-primary transition-colors">{post.data.title}</h2>
                {post.data.badge && <span class="badge badge-primary badge-sm">{post.data.badge}</span>}
              </div>
              <p class="text-sm text-base-content/60 line-clamp-2 mb-3">{post.data.description}</p>
              <div class="flex flex-wrap items-center gap-2">
                {post.data.tags?.map((tag) => (
                  <span class="badge badge-outline badge-sm">{tag}</span>
                ))}
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  )}

  <!-- PAGINATION -->
  <div class="flex justify-between mt-12">
    {page.url.prev ? (
      <a href={page.url.prev} class="btn btn-ghost border border-base-300/50 hover:border-primary/50 gap-2">
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Newer posts
      </a>
    ) : <div />}
    {page.url.next ? (
      <a href={page.url.next} class="btn btn-ghost border border-base-300/50 hover:border-primary/50 gap-2">
        Older posts
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    ) : <div />}
  </div>
</BaseLayout>
