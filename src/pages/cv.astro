---
import BaseLayout from "../layouts/BaseLayout.astro";

const BOOK_CALL_LINK = "https://growthtodo.neetocal.com/30mins";

type TimelineItem = {
  id: string;
  years: string;
  org: string;
  role: string;
  location?: string;
  url?: string;
  highlights: string[];
  links?: { label: string; href: string }[];
  isNow?: boolean;
};

const timeline: TimelineItem[] = [
  {
    id: "sellontube",
    years: "Dec 2025 - Present",
    org: "SellOnTube",
    role: "Founder",
    url: "https://sellontube.com",
    isNow: true,
    highlights: [
      "YouTube-first customer acquisition for internet-first businesses (done-for-you).",
      "Focus: bottom-of-funnel videos, positioning, and repeatable distribution systems.",
    ],
  },
  {
    id: "theseconddesign",
    years: "Sep 2022 - Present",
    org: "The Second Design",
    role: "Founder (Education design studio)",
    url: "https://theseconddesign.com",
    isNow: true,
    highlights: [
      "Designs transformational learning environments: curriculum, cohorts, facilitation, learning cadence.",
      "Work spans students, professionals, communities, and partner-led programs.",
    ],
  },
  {
    id: "startglobal",
    years: "Sep 2022 - Dec 2025",
    org: "StartGlobal.co",
    role: "COO (focus: user growth)",
    url: "https://startglobal.co",
    highlights: [
      "Scaled team and set up a more professional operating structure.",
      "Took over user growth focus in 2024; early traction via SEO.",
      "Learned what scales (and what doesn't) in ads vs. organic growth loops.",
    ],
  },
  {
    id: "howtocbc",
    years: "Jul 2021 - Sep 2022",
    org: "HowToCBC.com",
    role: "Co-founder",
    highlights: [
      "Validated the CBC platform idea by becoming the power user first.",
      "Built deep expertise in cohort-based course creation + distribution realities.",
      "Partnered with multiple CBC platforms; learned internet outreach + marketing.",
    ],
  },
  {
    id: "pupilfirst",
    years: "2019 - 2021",
    org: "Pupilfirst.org",
    role: "Co-founder & Director",
    highlights: [
      "Pivoted from incubation to education (developer school direction).",
      "Built industry-academia partnerships across universities; collaborated with major partners.",
      "Built and open-sourced an LMS; iterated heavily across years of learning models.",
    ],
  },
  {
    id: "svco",
    years: "2015 - 2019",
    org: "SV.CO (Startup Village Collective)",
    role: "Co-founder & COO",
    highlights: [
      "Raised funding to scale a digital incubator platform built at SV Labs.",
      "Incubated 100+ student teams via cohort-style programs across India.",
      "Learned hard lessons about sustainability, business models, and distribution.",
    ],
  },
  {
    id: "svlabs",
    years: "2013 - 2015",
    org: "SV Labs",
    role: "CEO",
    highlights: [
      "Built the digital platform that became the future of the incubator work.",
      "Helped move incubation services from physical-heavy to online-first operations.",
      "Shipped fast, learned faster. Classic builder/operator chapter.",
    ],
  },
  {
    id: "mobme",
    years: "2009 - 2013",
    org: "Mobme",
    role: "Leadership (early team / operator)",
    highlights: [
      "Joined early and wore every hat: biz-dev, ops, sales, strategy, client relations, hiring, growth.",
      "Joined as employee #1 for a new division; grew it into the top revenue vertical.",
      "Learned the cost of missing platform shifts while executing relentlessly.",
    ],
  },
];

const education = [
  {
    title: "Write of Passage (Cohort 8)",
    desc: "Personally invited by David Perell with a 95% scholarship. A writing-first program focused on clarity of thinking. Easily the best educational experience I have been part of.",
  },
  {
    title: "Maven Accelerator Program (Cohort 3)",
    desc: "Selected as part of a highly selective cohort of 145 instructors across 27 countries and 100+ cities (from 2,000+ applicants). One of the first 75 courses launched on Maven.com alongside top creators in 2021.",
  },
  {
    title: "B.Tech, Applied Electronics & Instrumentation",
    desc: "College of Engineering, Trivandrum (CET), 2009",
  },
];

const skills = [
  {
    title: "Operator skills",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" /></svg>`,
    items: [
      "Breaking complex problems into clear, executable sequences",
      "Hiring, team design, operating cadence, and execution quality",
      "Sales + customer conversations (the unglamorous truth source)",
      "Growth systems: positioning, distribution, iteration loops",
    ],
  },
  {
    title: "Builder / educator skills",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" /></svg>`,
    items: [
      "Education design: cohorts, curriculum, facilitation, learning environments",
      "Writing-first clarity (thinking, communicating, aligning)",
      "Product thinking: demand, ICP, PMF diagnostics, and ruthless prioritization",
      "Turning messy expertise into teachable, shippable assets",
    ],
  },
];
---

<BaseLayout title="CV" sideBarActiveItemID="cv">
  <!-- HERO -->
  <section class="relative mt-4 mb-16">
    <div class="space-y-6">
      <div class="inline-flex items-center gap-2 rounded-full border border-base-300/50 bg-base-200/50 px-4 py-1.5 text-xs font-medium tracking-wide">
        <span class="text-primary">CV</span>
        <span class="text-base-content/30">•</span>
        <span class="text-base-content/60">Background & experience</span>
      </div>

      <h1 class="text-4xl md:text-5xl font-bold leading-[1.1] tracking-tight max-w-3xl">
        <span class="gradient-text">Founder-operator.</span>
      </h1>

      <p class="text-lg md:text-xl text-base-content/70 max-w-2xl leading-relaxed">
        I build internet-first businesses across education, software, and consulting. Unusually good at turning messy ambiguity into an executable plan.
      </p>

      <div class="flex flex-wrap gap-4 pt-2">
        <a class="btn btn-primary btn-lg gap-2" href={BOOK_CALL_LINK} target="_blank" rel="noopener noreferrer">
          Book a call
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
        </a>
        <a class="btn btn-ghost btn-lg border border-base-300/50 hover:border-primary/50 hover:bg-primary/5" href="/projects">
          View projects
        </a>
      </div>
    </div>
  </section>

  <!-- SKILLS -->
  <section class="mb-16">
    <h2 class="text-2xl font-bold mb-8">What I am good at</h2>

    <div class="grid md:grid-cols-2 gap-6">
      {skills.map((skill) => (
        <div class="bg-base-200/50 border border-base-300/50 rounded-xl p-6 hover-glow">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-primary/10 text-primary flex items-center justify-center" set:html={skill.icon} />
            <h3 class="text-lg font-bold">{skill.title}</h3>
          </div>
          <ul class="space-y-2 text-base-content/70">
            {skill.items.map((item) => (
              <li class="flex items-start gap-2">
                <span class="text-primary mt-1.5">•</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>

  <!-- TIMELINE -->
  <section class="mb-16">
    <h2 class="text-2xl font-bold mb-8">Timeline</h2>

    <div class="space-y-4">
      {timeline.map((item) => (
        <div class={`bg-base-200/50 border rounded-xl p-6 hover-glow transition-all ${item.isNow ? 'border-primary/30' : 'border-base-300/50'}`}>
          <div class="flex flex-col md:flex-row md:items-start gap-4">
            <div class="md:w-36 flex-shrink-0">
              <div class="text-sm text-base-content/50">{item.years}</div>
              {item.isNow && <span class="badge badge-primary badge-sm mt-1">NOW</span>}
            </div>

            <div class="flex-grow">
              <div class="flex flex-wrap items-center gap-2 mb-1">
                <h3 class="text-lg font-bold">
                  {item.url ? (
                    <a href={item.url} target="_blank" rel="noopener noreferrer" class="hover:text-primary transition-colors">
                      {item.org}
                    </a>
                  ) : (
                    item.org
                  )}
                </h3>
              </div>
              <div class="text-base-content/60 text-sm mb-3">{item.role}</div>

              <ul class="space-y-1 text-base-content/70 text-sm">
                {item.highlights.map((h) => (
                  <li class="flex items-start gap-2">
                    <span class="text-primary mt-0.5">•</span>
                    <span>{h}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- EDUCATION -->
  <section class="mb-16">
    <h2 class="text-2xl font-bold mb-8">Education & programs</h2>

    <div class="space-y-4">
      {education.map((e) => (
        <div class="bg-base-200/50 border border-base-300/50 rounded-xl p-6 hover-glow">
          <h3 class="font-bold mb-1">{e.title}</h3>
          <p class="text-sm text-base-content/60">{e.desc}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- FINAL CTA -->
  <section class="mb-8">
    <div class="bg-gradient-to-br from-primary/10 to-primary/5 border border-primary/20 rounded-2xl p-8 md:p-10">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Want to work together?</h2>
      <p class="text-lg text-base-content/70 mb-6 max-w-2xl">
        Send a short note: what you are building, current traction, and what is stuck. If you are not a fit, I will tell you fast.
      </p>

      <div class="flex flex-wrap gap-4">
        <a class="btn btn-primary btn-lg gap-2" href={BOOK_CALL_LINK} target="_blank" rel="noopener noreferrer">
          Book a call
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
