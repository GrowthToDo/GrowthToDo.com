---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
const isStringPath = typeof img === "string";
---

<div class="md:w-1/3 w-full">
  <a href={url} target={target} class="block">
    <div class="card bg-base-200/50 border border-base-300/50 hover-glow mx-6 my-2 rounded-xl overflow-hidden">
      <figure class="overflow-hidden">
        {isStringPath ? (
          <img src={img} alt={title} class="transition-transform duration-300 hover:scale-105 w-full h-auto object-cover" loading="lazy" />
        ) : (
          <Image width={750} height={422} format="webp" src={img} alt={title} class="transition-transform duration-300 hover:scale-105" />
        )}
      </figure>
      <div class="card-body">
        <h2 class="card-title text-base-content font-semibold tracking-tight">
          {title}
          {badge && <div class="badge badge-primary badge-sm font-medium">{badge}</div>}
        </h2>
        <p class="text-base-content/70">{desc}</p>
        <div class="card-actions justify-end pt-2">
          {tags && tags.map((tag) => <div class="badge badge-outline badge-sm">{tag}</div>)}
        </div>
      </div>
    </div>
  </a>
</div>

