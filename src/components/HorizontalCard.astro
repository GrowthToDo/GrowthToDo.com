---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
const tag_url = url.split("/").slice(0, -1).join("/") + "/tag";
const isStringPath = typeof img === "string";
---

<div
  class="rounded-xl bg-base-200/50 border border-base-300/50 hover-glow p-1"
>
  <a href={url} target={target} class="block">
    <div class="hero-content flex-col md:flex-row gap-4">
      {
        img && isStringPath ? (
          <img
            src={img}
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg object-cover"
            loading="lazy"
          />
        ) : img ? (
          <Image
            src={img}
            width={750}
            height={422}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />
        ) : null
      }
      <div class="grow w-full">
        <h1 class="text-xl font-semibold tracking-tight text-base-content">
          {title}
          {badge && <div class="badge badge-primary badge-sm mx-2 font-medium">{badge}</div>}
        </h1>
        <p class="py-2 text-base text-base-content/70 leading-relaxed">{desc}</p>
        <div class="card-actions justify-end pt-2">
          {
            tags &&
              tags.map((tag) => (
                <a href={`${tag_url}/${tag}`} class="badge badge-outline badge-sm hover:badge-primary transition-colors">
                  {tag}
                </a>
              ))
          }
        </div>
      </div>
    </div>
  </a>
</div>
